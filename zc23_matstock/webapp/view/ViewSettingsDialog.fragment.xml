        id="viewSettingsDialog"
        confirm=".onConfirmViewSettingsDialog">
        <sortItems>
            <ViewSettingsItem
                text="{i18n>listSort1}"
                key="Zmatnr"
                selected="true"/>
        </sortItems>

    </ViewSettingsDialog>

    <ViewSettingsDialog
        id="viewSettingsDialog2"
        confirm=".onConfirmViewSettingsDialog">
